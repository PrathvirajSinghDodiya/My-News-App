<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F5F5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".choose">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearEntrtnmnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFD600"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/entertain" />

                <TextView
                    android:id="@+id/textViewEntertain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Entertainment"
                    android:textColor="#C51162"
                    android:textSize="19sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearSports"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/sports" />

                <TextView
                    android:id="@+id/textViewSport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Sports"
                    android:textColor="#2962FF"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp">

        <androidx.cardview.widget.CardView
            android:layout_width="87dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearHealth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00B8D4"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    app:srcCompat="@drawable/health" />

                <TextView
                    android:id="@+id/textViewHealth"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Health"
                    android:textColor="#FFD600"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="87dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearScience"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#AA00FF"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/science" />

                <TextView
                    android:id="@+id/textViewScience"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Science"
                    android:textColor="#00C853"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp">

        <androidx.cardview.widget.CardView
            android:layout_width="104dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearTechnology"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0091EA"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/technology" />

                <TextView
                    android:id="@+id/textViewTechnology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Technology"
                    android:textColor="#DD2C00"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="181dp"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:elevation="15dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:id="@+id/linearBusiness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#294068"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/business" />

                <TextView
                    android:id="@+id/textViewBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/black_ops_one"
                    android:gravity="center"
                    android:text="Business"
                    android:textColor="#AA00FF"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>